@model OptionTracker.Models.ViewModels.CreateTradeVM

@{
    ViewData["Title"] = "Edit Trade";
    var trade = Model.Trade;
    var ttypes = Model.TradeTypes;
}

<h2>Edit Trade</h2>
 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Trade.StockSymbol" class="control-label"></label>
                <input asp-for="Trade.StockSymbol" class="form-control" />
                <span asp-validation-for="Trade.StockSymbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trade.TradeTypeId" class="control-label"></label>
                <select class="form-control" asp-for="Trade.TradeTypeId" asp-items="ttypes">
                    <option>--select type--</option>
                </select>
                <span asp-validation-for="Trade.TradeTypeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Trade.Tradeid" />
            <div class="form-group">
                <label asp-for="Trade.Description" class="control-label"></label>
                <input asp-for="Trade.Description" class="form-control" />
                <span asp-validation-for="Trade.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trade.Notes" class="control-label"></label>
                <textarea asp-for="Trade.Notes" class="form-control" ></textarea>
                <span asp-validation-for="Trade.Notes" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Trade.DateClosed" class="control-label"></label>
                <input asp-for="Trade.DateClosed" class="form-control" />
                <span asp-validation-for="Trade.DateClosed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
